<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.clarkhg.img_viewer.mapper.UserMapper">
    <insert id="insertUser" parameterType="top.clarkhg.img_viewer.pojo.User">
        INSERT INTO user VALUES( #{username}, #{password}, #{email})
    </insert>

    <update id="updateUserPassword" parameterType="top.clarkhg.img_viewer.pojo.User">
        UPDATE user SET password=#{password} WHERE username=#{username}
    </update>

    <select id="selectUserByUsername" resultType="top.clarkhg.img_viewer.pojo.User">
        SELECT
            user.username AS username,
            user.password AS password
        FROM
            user
        WHERE
            user.username = #{username}
    </select>
</mapper>